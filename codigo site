    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // --- IMPORTANTE: EDITE AS INFORMAÇÕES ABAIXO ---
            const seuNumeroWhatsapp = '56912345678'; // Use o formato internacional sem '+' ou espaços. Ex: 569... (Chile)
            const seuEmail = 'seu.email@exemplo.com';
            // ------------------------------------------------

            const whatsappBtn = document.getElementById('whatsapp-btn');
            const emailBtn = document.getElementById('email-btn');

            // Função para o botão do WhatsApp
            if (whatsappBtn) {
                whatsappBtn.addEventListener('click', function() {
                    const mensagemPadrao = encodeURIComponent('Olá! Tenho interesse nas aulas particulares e gostaria de mais informações.');
                    const whatsappUrl = `https://wa.me/${seuNumeroWhatsapp}?text=${mensagemPadrao}`;
                    
                    // Abre o link do WhatsApp em uma nova aba
                    window.open(whatsappUrl, '_blank');
                });
            }

            // Função para o botão de E-mail
            if (emailBtn) {
                emailBtn.addEventListener('click', function() {
                    const assunto = encodeURIComponent('Interesse em Aulas Particulares');
                    const corpoEmail = encodeURIComponent('Olá,\n\nGostaria de saber mais detalhes sobre as aulas particulares (horários, valores, metodologia, etc.).\n\nObrigado(a).');
                    const emailUrl = `mailto:${seuEmail}?subject=${assunto}&body=${corpoEmail}`;

                    // Abre o cliente de e-mail padrão do usuário
                    window.location.href = emailUrl;
                });
            }

            // Bônus: Funcionalidade de rolagem suave para o menu
            document.querySelectorAll('.main-menu a').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

        });
    </script>
